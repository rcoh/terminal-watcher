tw() {
	if [ ! -f "$HOME/.twid" ];
		then
		LC_CTYPE=C tr -dc ABCDEFGHJKLMNPQRSTVWXYZ1-9 < /dev/urandom | head -c 6 > ~/.twid
		echo "\n" >> ~/.twid
		echo "Your Code: `cat ~/.twid`"
	fi

	CLIENT=`cat ~/.twid`
	
	client -mode s -command "$*" -client $CLIENT
	$@
	client -mode e -command "$*" -status $? -client $CLIENT
}
